<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">



<!--    ID / NOME PIATTO-->

    <TextView
        android:id="@+id/text_id"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:text="id" />

    <TextView
        android:id="@+id/text_nomepiatto"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:text="nomepiatto"
        android:layout_toEndOf="@+id/row_act1_id"/>

    <EditText
        android:id="@+id/row_act1_id"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:text="id"
        android:layout_below="@+id/text_id"/>

    <EditText
        android:id="@+id/row_act1_nomepiatto"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:text="nomepiatto"
        android:layout_toEndOf="@+id/row_act1_id"
        android:layout_below="@+id/text_id"/>




<!--    DIFFICOLTA/TEMPO-->

    <TextView
        android:id="@+id/text_difficolta"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:text="Difficoltà"
        android:layout_below="@+id/row_act1_id"/>

    <TextView
        android:id="@+id/text_tempo"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:text="Tempo"
        android:layout_below="@+id/row_act1_id"
        android:layout_toEndOf="@+id/text_difficolta"/>

    <EditText
        android:id="@+id/row_act1_difficolta"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:text="Difficoltà"
        android:layout_below="@+id/text_difficolta"/>

    <EditText
        android:id="@+id/row_act1_tempo"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:text="Tempo"
        android:layout_toEndOf="@+id/row_act1_difficolta"
        android:layout_below="@+id/text_difficolta"/>





<!--    PORTATA / PROVENIENZA-->

    <TextView
        android:id="@+id/text_portata"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:text="Portata"
        android:layout_below="@+id/row_act1_difficolta"/>

    <TextView
        android:id="@+id/text_provenienza"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:text="Provenienza"
        android:layout_below="@+id/row_act1_difficolta"
        android:layout_toEndOf="@+id/text_difficolta"/>

    <EditText
        android:id="@+id/row_act1_portata"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:text="Portata"
        android:layout_below="@+id/text_portata"/>

    <EditText
        android:id="@+id/row_act1_provenienza"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/text_portata"
        android:gravity="center_vertical"
        android:text="Provenienza"
        android:layout_toEndOf="@id/row_act1_portata" />




<!--    url e IMMAGINE-->

    <EditText
        android:id="@+id/row_act1_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="www.url.it"
        android:layout_below="@+id/row_act1_provenienza"/>

    <ImageView
        android:id="@+id/row_act1_imageurl"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/row_act1_url"/>



<!--    INGREDIENTI (LISTVIEW)-->

    <ListView
        android:id="@+id/row_act1_Lw_Ingredienti"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/row_act1_imageurl"
        android:layout_marginTop="11dp"
        android:scrollbars="vertical" />



    <!--    PROCEDIMENTO  -->

    <EditText
        android:id="@+id/row_act1_procedimento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:gravity="center_vertical"
        android:text="Procedimento"
        android:layout_below="@+id/row_act1_Lw_Ingredienti"
        android:layout_marginBottom="30dp"/>





</RelativeLayout>